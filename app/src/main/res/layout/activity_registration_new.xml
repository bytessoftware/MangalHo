<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.bytes.mangalho.activity.loginsignup.RegistrationNew">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/marryMe"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cicle_logo" />

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="@string/create_account"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_18sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:id="@+id/label_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/register_with_valid_email_id"
                    android:textColor="@color/textColorLight"
                    android:textSize="@dimen/_10sdp" />

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/full_name"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_full_name"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_et"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/email"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_email"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_et"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/password"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_password"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_et"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/confirm_password1"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_re_enter_your_password"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etCPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_et"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_rounded"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />


                <com.bytes.mangalho.view.CustomTextView
                    android:id="@+id/tvHaveAC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="@dimen/_15sdp"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />


            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/RRsncbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentBottom="true"></RelativeLayout>

    </RelativeLayout>
</layout>
