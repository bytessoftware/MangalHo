<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/_5sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <RelativeLayout
            android:id="@+id/rlClick"
            android:layout_width="@dimen/_290sdp"
            android:layout_height="@dimen/_180sdp">

            <com.github.siyamed.shapeimageview.RoundedImageView
                android:id="@+id/ivImage"
                android:layout_width="@dimen/_290sdp"
                android:layout_height="@dimen/_180sdp"
                android:src="@drawable/default_error"
                android:scaleType="fitXY"
                app:siRadius="@dimen/_5sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradiant_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp">

                    <com.bytes.mangalho.view.CustomTextViewBold
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="None"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                    <com.bytes.mangalho.view.CustomTextView
                        android:id="@+id/tvAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTitle"
                        android:layout_weight=".5"
                        android:text="None"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp" />



                </RelativeLayout>
            </LinearLayout>




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
</layout>

