<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bytes.mangalho.activity.editprofile.AboutAppearance">

        <RelativeLayout
            android:id="@+id/action_bar_menus"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow"
                    android:textColor="@color/white" />

            </LinearLayout>

            <com.bytes.mangalho.view.CustomTextViewBold
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/about_me"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/action_bar_menus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/weight_kg"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_weight"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etWeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:singleLine="true"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/body_type"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_body_type"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etBodyType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/complexion"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_complexion"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etComplexion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/challenged"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_challanged"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etChallenged"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/blood_group"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_blood"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etBloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/bg_btn_rounded"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:id="@+id/RRsncbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"></RelativeLayout>

    </RelativeLayout>
</layout>

