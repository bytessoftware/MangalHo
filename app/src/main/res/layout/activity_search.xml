<?xml version="1.0" encoding="utf-8"?>
<layout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.search.Search">

    <RelativeLayout
        android:id="@+id/action_bar_menus"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/llBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left_arrow"
                android:textColor="@color/white" />

        </LinearLayout>

        <com.bytes.mangalho.view.CustomTextViewBold
            android:id="@+id/tvHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/nav_search"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="vertical">


            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/looking_for"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_14sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_select_bride_groom"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <com.bytes.mangalho.view.CustomEditText
                    android:id="@+id/etLookingFor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_et"
                    android:editable="false"
                    android:focusable="false"
                    android:padding="10dp"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp" />
            </androidx.cardview.widget.CardView>

            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/caste"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_14sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/val_caste"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <com.bytes.mangalho.view.CustomEditText
                    android:id="@+id/etCaste"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_et"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:editable="false"
                    android:focusable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>
            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/marital_status_ne"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_14sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_select_marital_status"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <com.bytes.mangalho.view.CustomEditText
                    android:id="@+id/etMaritial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_et"
                    android:editable="false"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:focusable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp" />
            </androidx.cardview.widget.CardView>

            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/manglik1"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_14sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_select_manglik_status"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <com.bytes.mangalho.view.CustomEditText
                    android:id="@+id/etManglik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_et"
                    android:editable="false"
                    android:focusable="false"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp" />
            </androidx.cardview.widget.CardView>

            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/state"
                android:textColor="@color/textcolor"
                android:textSize="@dimen/_14sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/please_select_state"
                android:textColor="@color/text_color_light"
                android:textSize="@dimen/_12sdp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <com.bytes.mangalho.view.CustomEditText
                    android:id="@+id/etState"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:background="@drawable/bg_et"
                    android:editable="false"
                    android:focusable="false"
                    android:padding="10dp"
                    android:drawableRight="@drawable/ic_down_arrow"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_12sdp" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/llDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/district"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_select_district"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etDistrict"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <com.bytes.mangalho.view.CustomButton
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_btn_rounded"
                android:gravity="center"
                android:textAllCaps="false"
                android:textSize="@dimen/_12sdp"
                android:text="@string/nav_search"
                android:textColor="@color/white" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
</layout>
