<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bytes.mangalho.activity.editprofile.BasicDetailsActivity">

        <RelativeLayout
            android:id="@+id/action_bar_menus"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_left_arrow"
                    android:textColor="@color/white" />

            </LinearLayout>

            <com.bytes.mangalho.view.CustomTextViewBold
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/basic_details"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/action_bar_menus">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/name"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_full_name"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/gender"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_gender"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/caste"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_caste"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etCaste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/height"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_height"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etHeight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/gotra_txt"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_gotra"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etGotra"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/gotra_nanihal_txt"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_gotra_nanihal"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etGotraNanihal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/state"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/please_select_state"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etState"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/llDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.bytes.mangalho.view.CustomTextViewBold
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="@string/district"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_14sdp" />

                    <com.bytes.mangalho.view.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/please_select_district"
                        android:textColor="@color/text_color_light"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:cardElevation="0dp">

                        <com.bytes.mangalho.view.CustomEditText
                            android:id="@+id/etDistrict"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:background="@drawable/bg_et"
                            android:drawableRight="@drawable/ic_down_arrow"
                            android:editable="false"
                            android:focusable="false"
                            android:padding="10dp"
                            android:textColor="@color/textcolor"
                            android:textSize="@dimen/_12sdp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/city_enter"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_city"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etCity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomTextViewBold
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="@string/annual_income"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/_14sdp" />

                <com.bytes.mangalho.view.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/val_income"
                    android:textColor="@color/text_color_light"
                    android:textSize="@dimen/_12sdp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    app:cardElevation="0dp">

                    <com.bytes.mangalho.view.CustomEditText
                        android:id="@+id/etAnnualIncome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:background="@drawable/bg_et"
                        android:drawableRight="@drawable/ic_down_arrow"
                        android:editable="false"
                        android:focusable="false"
                        android:imeOptions="actionDone"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textSize="@dimen/_12sdp" />

                </androidx.cardview.widget.CardView>


                <com.bytes.mangalho.view.CustomButton
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@drawable/bg_btn_rounded"
                    android:gravity="center"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/RRsncbar"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"></RelativeLayout>

    </RelativeLayout>
</layout>
