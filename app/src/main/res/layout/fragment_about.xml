<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dogIV"
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:scaleType="centerCrop"
        android:src="@drawable/about_us_back"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:background="#66000000">


    </RelativeLayout>

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dogIV"
        android:layout_marginTop="-80dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="15dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="35dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.bytes.mangalho.view.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mangal Ho"
                android:textSize="@dimen/_14sdp" />






            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:autoLink="email"
                android:gravity="center"
                android:linksClickable="true"
                android:textSize="@dimen/_12sdp"
                android:text="@string/contact_us_about"
                android:textStyle="bold"
                android:layout_marginBottom="40dp"/>

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Â© 2023 Mangal Ho, Lucknow, India."
                android:textSize="@dimen/_12sdp" />

            <com.bytes.mangalho.view.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="All rights reserved."
                android:textSize="@dimen/_10sdp"
                android:layout_marginBottom="40dp"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>